<view class="arc-content">
  <block wx:for="{{articalList}}" wx:key="index">
    <view class="arc-item" data-url="{{item.href}}" bindtap="linkUrl">
      <view class="arc-item-img">
        <image src="{{item.imgUrl}}"></image>
      </view>
      <view class="arc-item-des">
        <view class="arc-item-title">
          <text>{{item.title!=""?item.title:"听说...夏天就要过去了" }}</text>
        </view>
        <view class="arc-item-num">
          <view class="view">
            <icon class="iconfont icon-chakan"></icon>
            <text>9999+</text>
          </view>
          <view class="like">
            <icon class="iconfont icon-xihuan"></icon>
            <text >1567</text>
          </view>
        </view>
      </view>
    </view>
  </block>
</view>