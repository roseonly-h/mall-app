
.weedList{
  height: 200rpx;
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
  border-bottom:2rpx solid #ccc;
}
.weedList navigator{
  height: 100%;
  display: flex;
  align-items: center;
}
.weedList-img{
  height: 100%;
  width: 25vw;
  margin-left: 20rpx;
}
.weedList-img image{
  width: 100%;
  height: 100%;
}
.weedList-content{
  width: 48vw;
  margin-left: 20rpx;
  margin-right: 20rpx;

}
.weedList-content-name,
.weedList-content-cons{
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weedList-content-name{
  font-size: large;
}
.weedList-content-cons{
  font-size: small;
}
.weedList-btns{
  width: 20vw;
  margin-right: 10rpx;
}
.weedList-mod{
  background-color:rgba(54, 253, 77, 0.59);
  color: #fff;
}
.weedList-del{
  background-color:rgba(253, 54, 57, 0.796);
  color: #fff;
}
.search-h {
  position: relative;
  display: flex;
  align-items: center;
  padding: 26rpx 10rpx 18rpx 20rpx;
  background-color: #f3f4f6;
}
.search-h .icon{
  position: absolute;
  left: 45rpx;
}
.search-h .input {
  background-color: #fff;
  padding: 14rpx 56rpx 14rpx 70rpx;
  border-radius: 40rpx;
  flex: 6;
  border: 1rpx solid rgb(93, 241, 209);
}
.search-h .search {
  padding: 12rpx;
  margin: 0;
  flex: 1;
  color: #ffffff;
  font-size: 30rpx;
  margin-left: 20rpx;
  background-color: rgb(93, 241, 209);
}