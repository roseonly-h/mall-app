#add-weed{
  height: 100%;
  background-color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
}
.add-form{
  width: 90%;
  height: 95%;
  display: flex;
  justify-content: center;
}
.weed-name{
  height: 100rpx;
  border-radius: 20rpx;
}
.weed-name input{
  background-color: #fff;
  width: 100%;
  height: 100%;
  padding-left: 20rpx;
  border-radius: 20rpx;
  margin: 5rpx 0;
}
.weed-con,
.weed-prev{
  margin-top: 50rpx;
  border-radius: 20rpx;
  height: 180rpx;
  padding-bottom: 20rpx;
}
.title{
  font-weight: 700;
}
.weed-con textarea,
.weed-prev textarea{
  margin-bottom: 10rpx;
  background-color: #fff;
  padding-left: 20rpx;
  height: 100%;
  padding-top: 20rpx;
  border-radius: 20rpx;
}
.preview{
  margin-top: 50rpx;
  display: flex;
  justify-content: flex-start;
}
.pre-img{
  position: relative;
}
.preview image{
  margin-left: 40rpx;
  margin-top: 20rpx;
  width: 200rpx;
  height: 200rpx;
}
.btns{
  margin-top: 50rpx;
}
.btns button{
  margin-top: 40rpx;
  border-radius: 40rpx;
  color: #fff;
}
.choose{
  background-color: rgb(113, 98, 250);
}
.add-weed{
  background-color: #d50310;
}