.baike {
  width: 100%;
  height: 100%;
  overflow: scroll;
  background-color: bisque;
}

/* 隐藏滚动条 */
.baike::-webkit-scrollbar {
  display: none
}

.baike-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.baike-info .baike-info-name{
  font-size: 45rpx;
  font-weight: 700;
  margin: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #000;
}

.baike-info .baike-info-img image{
  width: 500rpx;
  height: 300rpx;
  border-radius: 20rpx;
}
.baike-info .baike-info-des{
  font-size: 36rpx;
  font-weight: 300;
  margin: 30rpx;
  letter-spacing: 2px;
  line-height: 1.5rem;
}