.showRes{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.showFileImage{
  height: 30vh;
  padding: 30rpx;
}
.showFileImage image{
  width: 100%;
  height: 100%;
}
.showResImages{
  display: flex;
  white-space: nowrap;
  /* justify-content: center; */
  align-items: center;
  overflow-x: scroll;
  width: 100%;
  height: 50vh;
}
.showResImages::-webkit-scrollbar {
  display: none
  }
.showResImages .showResItem{
  margin: 0 30rpx;
  display: flex;
  flex-direction: column;
  width: 400rpx;
  align-items: center;
  background-color: #fff;
  padding: 15rpx;
  border-radius: 30rpx;
  border: 3rpx solid #fff;
  background-clip:content-box;
}
.showResImages .showResItem .showName{
  margin-bottom: 30rpx;

}
.showResImages .showResItem .image{
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  overflow: hidden;
}
.showRes .showText{
  text-align: center;
  line-height: 80rpx;
  margin: 20rpx auto;
  background-color: rgb(60, 218, 107);
  width: 400rpx;
  height: 80rpx;
  border-radius: 40rpx;
  color: #fff;
}
.showRes .showErr{
  position: relative;
  margin-left: calc(50vw - 200rpx);
}
.showRes .showErr image{
  width: 400rpx;
  height: 400rpx;
  border-radius: 50%;
  overflow: hidden;
  filter: blur(3rpx);
}